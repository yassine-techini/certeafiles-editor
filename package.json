{
  "name": "certeafiles-editor",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Professional WYSIWYG editor for certified documents based on Lexical",
  "repository": {
    "type": "git",
    "url": "https://github.com/yassine-techini/certeafiles-editor"
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write src",
    "test": "vitest",
    "test:e2e": "playwright test",
    "pages:build": "pnpm build",
    "pages:deploy": "wrangler pages deploy dist",
    "pages:preview": "wrangler pages dev dist"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "lexical": "^0.20.0",
    "@lexical/react": "^0.20.0",
    "@lexical/rich-text": "^0.20.0",
    "@lexical/table": "^0.20.0",
    "@lexical/list": "^0.20.0",
    "@lexical/link": "^0.20.0",
    "@lexical/code": "^0.20.0",
    "@lexical/html": "^0.20.0",
    "@lexical/utils": "^0.20.0",
    "zustand": "^4.5.5",
    "lucide-react": "^0.468.0",
    "date-fns": "^3.6.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3",
    "vitest": "^2.1.8",
    "wrangler": "^3.99.0"
  },
  "pnpm": {
    "overrides": {
      "lexical": "^0.20.0"
    },
    "patchedDependencies": {}
  },
  "engines": {
    "node": ">=18.0.0"
  }
